<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="ogr.user12043.opencv.test.basics.BasicsController">
  <bottom>
    <HBox alignment="CENTER" prefHeight="59.0" prefWidth="600.0" BorderPane.alignment="CENTER">
      <children>
        <Button fx:id="button_control" alignment="CENTER" mnemonicParsing="false" onAction="#controlCamera"
                text="Start Camera"/>
      </children>
    </HBox>
  </bottom>
  <right>
    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
      <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Controls"/>
        <CheckBox fx:id="checkBox_grayScale" mnemonicParsing="false" onAction="#controlGrayScale" text="Gray scale">
          <VBox.margin>
            <Insets top="5.0"/>
          </VBox.margin>
        </CheckBox>
        <CheckBox fx:id="checkBox_addLogo" mnemonicParsing="false" onAction="#controlAddLogo" text="Add logo">
          <VBox.margin>
            <Insets top="5.0"/>
          </VBox.margin>
        </CheckBox>
      </children>
      <opaqueInsets>
        <Insets/>
      </opaqueInsets>
      <BorderPane.margin>
        <Insets top="10.0"/>
      </BorderPane.margin>
    </VBox>
  </right>
  <center>
    <ImageView fx:id="imageView_display" fitHeight="314.0" fitWidth="417.0" pickOnBounds="true" preserveRatio="true"
               BorderPane.alignment="CENTER"/>
  </center>
</BorderPane>
